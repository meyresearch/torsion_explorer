import matplotlib as plt
import numpy as np
import pandas as pd
import psi4

molecule=psi4.geometry("""
1 1
    P            2.487077113820    -0.644149419131     0.239449766119
    O           -2.228781764727     1.673433192609     0.131644863688
    O            3.780194207883    -1.190615282217    -0.517610991772
    O            1.800543589135    -1.637691544839     1.178883771233
    O            2.726720115890     0.598530398353     1.113031642067
    O           -1.237018766591     3.663864107964    -0.066961508943
    C            0.147829952997     0.402632244306    -0.757622044603
    C            1.431104507998    -0.235232202496    -1.207917230567
    C           -1.002540158632    -0.364959164772    -0.381295201275
    C           -2.193651499376     0.348518991986     0.055147950584
    C            0.079383735905     1.775857642378    -0.637967825515
    C           -1.063552843609    -1.776671268087    -0.402313783129
    C           -3.371820961097    -0.329663354653     0.423278871264
    C           -1.110057754568     2.473745728782    -0.187673552245
    C           -2.219655293877    -2.432090845737    -0.032673035560
    C           -3.380969884118    -1.703367246597     0.377041062329
    H            1.998400436789     0.454425087516    -1.839668854279
    H            1.267588124866    -1.147290015238    -1.787485558383
    H            0.921908772581     2.415558855005    -0.875645995778
    H           -0.190546734093    -2.349669962877    -0.684334171221
    H           -4.230813889972     0.252223440190     0.736839063889
    H           -2.254354085106    -3.516092194749    -0.047676912803
    H           -4.276529004071    -2.247807489848     0.658198195833
    H            4.513093852162    -1.459935055035     0.062159123052
""")

geom=np.array(molecule.geometry())
x=[]
y=[]
z=[]
name=[]

shape= np.shape(geom)[0]
for i in range(shape):
    x.append(geom[i,0])
    y.append(geom[i,1])
    z.append(geom[i,2])
    
identification=[i for i in range(shape)]

#Highlights P/O
#for i in range(5):
#    identification[i]=100


import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits import mplot3d

ax = plt.axes(projection='3d')
ax.scatter3D(x, y, z, c=identification, cmap='winter')
plt.axis('off')

for i, txt in enumerate(name):
	ax.annotate(txt, (x[i], y[i], z[i]))

